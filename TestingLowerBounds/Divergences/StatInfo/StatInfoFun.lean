lemma continuousAt_statInfoFun_zero (hŒ≥ : Œ≥ ‚â† 0) :
    ContinuousAt (statInfoFun Œ≤ Œ≥) 0 := by
  by_cases hŒ≤ : Œ≤ = 0
  ¬∑ simp only [hŒ≤, statInfoFun_zero']
    fun_prop
