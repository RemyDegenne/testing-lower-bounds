lemma EReal.toENNReal_sub_le_add (b a c : EReal) :
    (b - a).toENNReal ‚â§ (b - c).toENNReal + (c - a).toENNReal := by
  by_cases hc_top : c = ‚ä§
  ¬∑ simp only [hc_top, EReal.sub_top, ne_eq, bot_ne_top, not_false_eq_true,
