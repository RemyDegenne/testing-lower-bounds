    by_cases hb_bot : b = ‚ä•
    ¬∑ simp [hb_bot]
    ¬∑ simp [EReal.add_top_of_ne_bot hb_bot]
  refine (EReal.toENNReal_le_toENNReal ?_).trans EReal.toENNReal_add_le
