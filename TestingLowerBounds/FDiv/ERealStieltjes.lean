instance : Module ‚Ñù‚â•0 ERealStieltjes where
  smul c f := c ‚Ä¢ f
  one_smul _ := ext fun _ ‚Ü¶ one_mul _
  mul_smul a b f := ext fun x ‚Ü¶ by
    simp only [smul_apply, coe_mul, EReal.coe_ennreal_mul]
    rw [mul_assoc]
  smul_zero _ := ext fun _ ‚Ü¶ mul_zero _
