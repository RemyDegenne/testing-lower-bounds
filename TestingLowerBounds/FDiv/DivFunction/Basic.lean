  split_ifs with hxy hxz hxz
  ¬∑ exact hf hxy hxz hyz
  ¬∑ exact absurd (hxy.trans hyz) hxz
  ¬∑ exact hf le_rfl hxz hxz
  ¬∑ exact le_rfl

